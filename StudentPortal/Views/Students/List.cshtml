@model List<StudentPortal.Models.Entity.Student>
<h1 class="m-3 text-center">Students</h1>
<a class="btn btn-secondary m-4" asp-controller="Students" asp-action="Add">Add new Student</a>
<table class="table table-bordered table-responsive mt-4">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>
                Actions
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id
                </td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>

                </td>
            </tr>
        }

</tbody>
</table>
